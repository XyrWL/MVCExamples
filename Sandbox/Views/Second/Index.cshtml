
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<p>@ViewBag.ChosenCoordinate</p>

@for (int i = 0; i < 3; i++)
{
    <div>
        @for (int j = 0; j < 3; j++)
        {
            using (Html.BeginForm("Index", "Second", FormMethod.Post, new { style = "display : inline-block;"}))
            {
                <input type="hidden" name="coordinate" value="@i@j"/>
                <input type="submit" value="@i@j" />
            }
        }
    </div>
}
