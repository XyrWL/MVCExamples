@model RazorProject.Models.RecipeDetailsModel
@{
    ViewBag.Title = "Full details";
}

<h2>Full details of @Model.Name</h2>

<h3>Difficulty: @Model.Difficulty</h3>

<h3>Ingredients</h3>
<p>@(Model.Ingredients.Length < 20 ? Model.Ingredients : Model.Ingredients.Substring(0, 17) + "...")</p>

<h3>Cooking time</h3>
<p>@(Model.CookingTime ?? 30) minutes.</p>

<h3>Instructions</h3>
<p>@Model.Instructions</p>
