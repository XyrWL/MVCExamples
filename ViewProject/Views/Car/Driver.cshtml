@{
    ViewBag.Title = "Driver";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var speed = 250;
}

<h2>Driver</h2>
<ul>
    @for (int i = 100; i > 50; i -= 4)
    {
        <li>@i</li>
    }
</ul>

<h3>If/Else</h3>
@if (speed > 200)
{
    <p>Detta är en sportbild.</p>
}
else
{
    <p>LGF-fordon.</p>
}